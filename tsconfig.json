{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES6",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "declaration": true,
    "newLine": "LF",
    "allowJs": false,
    "strict": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },

  "include": ["src/*"],
  "exclude": [ "node_modules" ]
}